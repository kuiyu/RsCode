@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://unpkg.com/vue@3.4.38/dist/vue.global.js"></script>
    <link rel="stylesheet" href="https://unpkg.com/tdesign-vue-next/dist/tdesign.min.css" />
    <script src="https://unpkg.com/tdesign-vue-next/dist/tdesign.min.js"></script>
    <script src="https://unpkg.com/axios@1.7.5/dist/axios.min.js"></script>
   
    <title>RsCode插件管理</title>
</head>

<body>
    <div id="app">
        <t-table row-key="name" :data="list" :columns="columns" lazy-load >
            <template #status="{row}">
                <t-tag v-if="row.status==0" variant="outline">己禁用</t-tag>
                <t-tag v-if="row.status==1" theme="success" variant="outline">己启用</t-tag>
            </template>
            <template #opt="{row}">
                <t-space  size="small" align="center">
                    <t-button v-if="row.status==0"  theme="primary" @@click="open('enable',row)">启用</t-button>
                    <t-button v-if="row.status==1"  theme="danger" @@click="open('disable',row)">禁用</t-button>
                   @*  <t-button  theme="warning" @@click="open('update',row)">重新加载</t-button> *@
                    <a v-if="row.name=='Plugin.Discount'" href="/discounts/index" target="_blank">Discounts/Index </a>
                    <a v-if="row.name=='Plugin.Doc'" href="/api/doc/index" target="_blank">/api/doc/Index </a>
                </t-space>
               
                
            </template>
        </t-table>
    </div>
    <script src="~/js/site.js?v=1.1"></script>
</body>

</html>



